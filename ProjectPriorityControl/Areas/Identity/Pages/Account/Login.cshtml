@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <!-- plugins:css -->
    <link href="~/lib/iconfonts/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/lib/css/vendor.bundle.base.css" rel="stylesheet" />
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- endinject -->
    <link rel="shortcut icon" href="~/favicon.ico" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper auth-page">
            <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        <div class="auto-form-wrapper">
                            <form id="account" method="post">
                                <div class="row">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                <div class="form-group">
                                    <label class="label">Username</label>
                                    <div class="input-group" id="username-container">
                                        <input asp-for="Input.Username" class="form-control" data-parsley-errors-container="#username-container" placeholder="Username" required="" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="label">Password</label>
                                    <div class="input-group" id="password-container">
                                        <input asp-for="Input.Password" class="form-control" data-parsley-errors-container="#password-container" placeholder="*********" required="" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary submit-btn btn-block">Login</button>
                                </div>
                                <div class="form-group d-flex justify-content-between">
                                    <div class="form-check form-check-flat mt-0">
                                        <label class="form-check-label">
                                            <input asp-for="Input.RememberMe" class="form-check-input" checked /> Keep me signed in
                                            <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <p class="auth-footer footer-text text-center">copyright © @DateTime.Now.Year PTPC. All rights reserved.</p>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/lib/js/vendor.bundle.base.js"></script>
    <script src="~/lib/parsley/dist/parsley.min.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <!-- endinject -->
    <script>
        $(document).ready(function () {
            $('#account').parsley({
                successClass: "is-valid",
                errorClass: "is-invalid",
                errorsWrapper: "<div class='invalid-feedback'></div>",
                errorTemplate: "<div></div>"
            });
        });
    </script>
</body>

</html>