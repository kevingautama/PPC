@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="row">
                <div class="col-md-6">
                    <p class="card-description">
                        Account info
                    </p>
                </div>
                <div class="col-md-6">
                    <p class="card-description">
                        Personal info
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Username" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input class="form-control" asp-for="Username"disabled required="" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Input.Name" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Input.Name" class="form-control" required="" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Input.Email" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Input.Email" class="form-control" required="" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Input.Gender" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <select asp-for="Input.Gender" class="form-control">
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Role" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Role" class="form-control" disabled required="" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Input.Address" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Input.Address" class="form-control" required="" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">

                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Input.PhoneNumber" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>


            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}