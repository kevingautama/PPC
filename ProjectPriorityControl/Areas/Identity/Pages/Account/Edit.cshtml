@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}
<form id="edit-form" method="post">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">

                <a href="~/Identity/Account/" class="btn btn-secondary btn-fw">Back</a> <a href="~/Identity/Account/AssignRole?id=@Model.Input.Id" class="btn btn-primary btn-fw"> Assign Role </a> <a href="~/Identity/Account/ResetPassword?id=@Model.Input.Id" class="btn btn-warning btn-fw"> Reset Password </a> <button type="button" class="btn btn-danger btn-fw" data-toggle="modal" data-target="#delete-modal">Delete</button>
                <hr />
                <h4 class="card-title">Edit account</h4>
                <input asp-for="Input.Id" />
                <input asp-for="Input.Username" />
                <input asp-for="Input.Role" />
                <div class="row">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p class="card-description">
                            Account info
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="card-description">
                            Personal info
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.Username" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input class="form-control" value="@Model.Input.Username" disabled required="" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.Name" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Input.Name" class="form-control" required="" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.Email" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Input.Email" class="form-control" required="" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.Gender" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="Input.Gender" class="form-control">
                                    <option>Male</option>
                                    <option>Female</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.Role" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input class="form-control" value="@Model.Input.Role" disabled required="" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.Address" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Input.Address" class="form-control" required="" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.Status" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="Input.IsActive" class="form-control">
                                    <option value="true">Active</option>
                                    <option value="false">Not Active</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>

            </div>
        </div>
    </div>
    <div id="delete-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete user</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                </div>
                <div class="modal-body">
                    <p>Are you sure to delete this user? This action is reversible.</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" asp-page-handler="Delete" asp-route-id="@Model.Input.Id" class="btn btn-danger btn-fw"> Delete </button>
                    <button type="button" class="btn btn-default btn-fw" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>




@section Scripts {
    <script src="~/lib/parsley/dist/parsley.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#edit-form').parsley({
                successClass: "is-valid",
                errorClass: "is-invalid",
                errorsWrapper: "<div class='invalid-feedback'></div>",
                errorTemplate: "<div></div>"
            });
        });
    </script>
}
