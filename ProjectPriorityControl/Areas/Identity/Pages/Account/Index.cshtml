@page
@model IndexModel
@{
    ViewData["Title"] = "Users";
}

@section Styles{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <a href="~/Identity/Account/Register" class="btn btn-success btn-fw">Add User</a>
            <hr />
            <div class="table-responsive">
                <table class="table" id="users-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Gender
                                </td>
                                <td>@item.Role</td>
                                <td>
                                    @if (item.IsActive == true)
                                    {
                                        <label class="badge badge-success">Active</label>
                                    }
                                    else if (item.IsActive == false)
                                    {
                                        <label class="badge badge-warning">Not Active</label>
                                    }
                                    else
                                    {
                                        <label class="badge badge-danger">No Data</label>
                                    }
                                </td>
                                <td>
                                    <a href="~/Identity/Account/Edit?id=@item.Id" class="btn btn-inverse-light btn-fw">Detail</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#users-table').DataTable();
        })
    </script>
}